<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HorizonTrackMAD_CW"
        tools:targetApi="31">

        <!-- LandingPageActivity as the launcher activity -->
        <activity
            android:name="com.example.horizontrack_mad_cw.LandingPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignUpActivity Declaration -->
        <activity
            android:name="com.example.horizontrack_mad_cw.SignUpActivity"
            android:exported="true"
            />

        <!-- SignInActivity Declaration -->
        <activity
            android:name="com.example.horizontrack_mad_cw.SignInActivity"
            android:exported="true" />

        <!-- DashboardActivity Declaration -->
        <activity
            android:name="com.example.horizontrack_mad_cw.DashboardActivity"
            android:exported="true" />

        <!-- MainActivity (if needed for later navigation) -->
<!--        <activity-->
<!--            android:name="com.example.horizontrack_mad_cw.MainActivity"-->
<!--            android:exported="true" />-->
    </application>
</manifest>
