<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/BMI">

        <!-- Title -->
        <TextView
            android:id="@+id/tvBMICalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Calculator"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000000" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="31dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="@drawable/reset_btn" />

        <!-- Gender Selection -->
        <LinearLayout
            android:id="@+id/llGenderSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingBottom="35dp"
            android:gravity="center_horizontal">

            <!-- Male Card -->
            <LinearLayout
                android:id="@+id/llMaleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="#607D8B"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivMaleIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/male_btn"
                    android:contentDescription="Male icon" />

                <TextView
                    android:id="@+id/tvMaleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Male"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Female Card -->
            <LinearLayout
                android:id="@+id/llFemaleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="#195395"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivFemaleIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Female icon"
                    android:src="@drawable/female_btn" />

                <TextView
                    android:id="@+id/tvFemaleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <!-- Input Section -->
        <LinearLayout
            android:id="@+id/llInputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Height Input -->
            <LinearLayout
                android:id="@+id/llHeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvHeightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height (cm):"
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Enter your height"
                    android:background="@drawable/input_background"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#37474F" />
            </LinearLayout>

            <!-- Weight Input -->
            <LinearLayout
                android:id="@+id/llWeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvWeightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (kg):"
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Enter your weight"
                    android:background="@drawable/input_background"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#37474F" />
            </LinearLayout>

            <!-- Age Input -->
            <LinearLayout
                android:id="@+id/llAgeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAgeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age (Years):"
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Enter your age"
                    android:background="@drawable/input_background"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#37474F" />
            </LinearLayout>
        </LinearLayout>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:background="#03A9F4"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- BMI Details -->
        <TextView
            android:id="@+id/tvBMIDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:gravity="center"
            android:text="BMI Details Appear Here"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Recommendations Button -->
        <Button
            android:id="@+id/btnRecommendations1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations â†’"
            android:background="#002D62"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
