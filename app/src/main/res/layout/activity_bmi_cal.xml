<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/BMI">

        <!-- Title -->
        <TextView
            android:id="@+id/tvBMICalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Calculator"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000000" />

        <!-- Reset Button -->

        <!-- Gender Selection -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="31dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="@drawable/reset_btn"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingBottom="35dp"
            android:layout_gravity="center_horizontal">

            <!-- Male Card -->

            <!-- Female Card -->
            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="178dp"

                android:layout_marginEnd="8dp"
                android:background="#607D8B"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="100dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/male_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Male"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="177dp"

                android:layout_marginStart="8dp"
                android:background="#9C27B0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/female_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginEnd="16dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="155"
                    android:background="@drawable/input_background"
                    android:gravity="center"
                    android:textColor="#777777"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginEnd="16dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="44"
                    android:background="@drawable/input_background"
                    android:gravity="center"
                    android:textColor="#777777"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="age"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_marginEnd="16dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="22"
                    android:background="@drawable/input_background"
                    android:gravity="center"
                    android:textColor="#777777"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- BMI Details -->
        <TextView
            android:id="@+id/tvBMIDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:gravity="center"
            android:text="BMI Details Appear Here"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Recommendations Button -->
        <Button
            android:id="@+id/btnRecommendations1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations â†’"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
