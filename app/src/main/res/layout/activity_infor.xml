<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendation"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"/>

        <!-- Age, Gender, Height, Weight, BMI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvAgekey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvAgevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--fvdfvf"
                android:textSize="18sp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvGenderkey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvGendervalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvHeightkey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Height: "
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvHeightvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvWeightkey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvWeightvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvBMIkey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BMI: "
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvBMIvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Recommendations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommendation Details"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"/>

            <!-- Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvCategoryinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Interpretation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interpretation:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvInterpretationinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Health Implications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Implications:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvHealthImplicationsinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Recommendations -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommendations:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRecommendationsinfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Button to generate diet plan -->
        <Button
            android:id="@+id/btnGenerateDietPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Diet Plan"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

        <!-- Fragment container to display diet plan -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
